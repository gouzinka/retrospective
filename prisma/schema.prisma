// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model User {
  id              Int            @id @default(autoincrement())
  name            String
  customColor     String         @default("#c6ffca")
  cards           Card[]
  createdAt       DateTime       @default(now())
  createdRetros Retrospective[] @relation("CreatedBy")
}

model Retrospective {
  id           String         @id @default(uuid())
  title        String
  creatorId    Int
  creator      User           @relation(name: "CreatedBy", fields: [creatorId], references: [id])
  boards       Board[]
  createdAt    DateTime       @default(now())
  actionPoints ActionPoint[]
}

model Board {
  id           String            @id @default(uuid())
  title        String
  retrospectiveId String
  retrospective Retrospective @relation(fields: [retrospectiveId], references: [id])
  cards        Card[]
  cardGroups   CardGroup[]
  createdAt    DateTime       @default(now())
}

model Card {
  id           String         @id @default(uuid())
  content      String
  authorId     Int
  author       User           @relation(fields: [authorId], references: [id])
  isPublic     Boolean        @default(false)
  boardId      String
  board        Board          @relation(fields: [boardId], references: [id])
  createdAt    DateTime       @default(now())
  groupId      String?
  group        CardGroup?     @relation(fields: [groupId], references: [id])
}

model ActionPoint {
  id              String        @id @default(uuid())
  description     String
  retrospectiveId String
  retrospective   Retrospective @relation(fields: [retrospectiveId], references: [id])
  createdAt       DateTime      @default(now())
}

model CardGroup {
  id          String        @id @default(uuid())
  boardId     String
  board       Board  @relation(fields: [boardId], references: [id])
  cards       Card[]
  createdAt   DateTime @default(now())
}